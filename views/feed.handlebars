<div class="container-fluid">
  <div class="row">
    <div class="">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Your Feed</h5>
        </div>
      </div>
    </div>
  </div>
</div>
  <div class="filter-box">
    <h4>Filter posts by emotion</h4>
    <form id="emoji-filter-form">
      <label for="emoji-dropdown">Choose an emoji:</label>
      <select id="emoji-dropdown">
        <option value="1">Happy ğŸ˜</option>
        <option value="2">Neutral ğŸ˜</option>
        <option value="3">Anxious ğŸ˜¥</option>
        <option value="4">Angry ğŸ˜ </option>
        <option value="5">Sad ğŸ˜¢</option>
      </select>
      <input type="button" name="filter" value="Filter" class="btn btn-dark" onclick="filterFormHandler(event)">
    </form>
  </div>
    <div alt="flex container for emojis associated with this post" class="post-footer spaced gap ">
      {{!-- the save icon needs to be at the end of this flex box.. --}}
      {{#each post.emojis as |emoji|}}
      <img src="{{emoji.url}}" width="70px">
      {{/each}}
      <div class="edit-delete">
        <button alt="{{post.id}}" class="btn save-btn" id="save-post-btn" onclick="savePostHandler(event)"><img id="{{post.id}},{{post.user_id}}" src="assets/images/save-icon.png" class="save-icon"></button>
      </div>
      <hr>
      {{else}}
      <p>No posts found...</p>
      {{/each}}
    </div>
  </div>

<script src="/js/savePost.js"></script>
<script src="/js/filter.js"></script>
